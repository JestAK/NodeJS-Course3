generator client {
  provider = "prisma-client-js"
  // output       = "../src/generated/prisma"
  // moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id            String   @id @default(uuid())
  title         String
  totalEpisodes Int
  createdAt     DateTime @default(now())
  tasks         Task[]
}

model Task {
  id            String    @id @default(uuid())
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id])
  episodeNumber Int
  type          String
  status        String
  assignedTo    String?
  deadline      DateTime?
}
